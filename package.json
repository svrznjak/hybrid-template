{
  "name": "hybrid-template",
  "version": "0.0.0",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "android": "npm run build && npx cap sync && npx cap run android -l",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "configureNativeCode": "ts-node --project tsconfig.node.json --esm ./configureNativeCode.ts",
    "v": "ts-node -vvv"
  },
  "dependencies": {
    "@capacitor-firebase/authentication": "^5.1.0",
    "@capacitor-firebase/firestore": "^5.4.0",
    "@capacitor/android": "^5.3.0",
    "@capacitor/app": "^5.0.6",
    "@capacitor/core": "^5.3.0",
    "@capacitor/device": "^5.0.6",
    "@capacitor/ios": "^5.3.0",
    "@capacitor/splash-screen": "^5.0.6",
    "@capacitor/status-bar": "^5.0.6",
    "@trapezedev/configure": "^7.0.10",
    "@trapezedev/project": "^7.0.10",
    "@vee-validate/i18n": "^4.11.3",
    "@vee-validate/rules": "^4.11.3",
    "date-fns": "^2.30.0",
    "firebase": "^10.3.1",
    "framework7": "^8.3.0",
    "framework7-vue": "^8.3.0",
    "vee-validate": "^4.11.3",
    "vue": "^3.3.4",
    "vue-i18n": "^9.3.0-beta.27"
  },
  "devDependencies": {
    "@capacitor/assets": "^2.0.4",
    "@capacitor/cli": "^5.3.0",
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^18.2.0",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.17.5",
    "@vitejs/plugin-vue": "^4.3.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.46.0",
    "eslint-plugin-vue": "^9.16.1",
    "jsdom": "^22.1.0",
    "node": "^18.17.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.2",
    "vue-tsc": "^1.8.8"
  }
}
